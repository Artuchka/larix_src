block footerVars
    -
        const footer_navList= [
            {
                href:'#',
                text:'Каталог',
            },
            {
                href:'#',
                text:'Акции',
            },
            {
                href:'#',
                text:'Кубатурник',
            },
            {
                href:'#',
                text:'Доставка',
            },
            {
                href:'#',
                text:'О нас',
            },
            {
                href:'#',
                text:'Контакты',
            },
        ]

    -
        const footer_navActions = [
            {
                img1: 'header/action_whatsapp.svg',
                img2: 'header/action_tg.svg',
                text: '+7 (939) 777-70-90'
            },
            {
                img1: 'header/action_phone.svg',
                img2: 'header/action_phone2.svg',
                text: 'Заказать звонок'
            },
        ]

footer.footer
    .footer__wrapper
        .footer__nav
            ul.nav__list 
                each navItem in footer_navList 
                    li.nav__item 
                        a.nav__link(href=navItem.href)= navItem.text
                
        .footer__logo.logo 
            span лого
            .rights Все права защищены
            .to-start В начало
    

        .footer__action-list 
            +searchField('footer__search-field')
            each action in footer_navActions 
                .footer__action-item
                    +image(action.img1)
                    +image(action.img2)
                    span= action.text
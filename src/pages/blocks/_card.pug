mixin card(_imgSrc='', _title='Доска обрезная', _type='Лиственница', _price=9000, hasDiscount)
    .card 
        //- img.card__image(src=_imgSrc) 
        +image(_imgSrc, 'card__image')
        
        .card__title= _title
        .card__type= _type
        .card__flexy
            .card__price= _price
            .card__actions 
                +button('Перейти', 'button--full')
                if (hasDiscount)
                    span.discount -20%
